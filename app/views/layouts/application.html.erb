<!DOCTYPE html>
<html>
<head>
  <% if @pagename == "nil" %>
    <title>The Marmite Revolution - It's spreading. </title>
  <% else %>
    <title>Marmite Junction - <%= @pagename%></title>
  <% end %>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id='holder'>
    <div id="header">
      <div id='logo' onclick="window.location='/'" />
      <div id='sitemap'>
        <%= link_to 'Home', '/' %>
        <%= link_to "Marmite Files", "/files"%><br/>
        <%= link_to "Marmite Jam", '/jam' %><br/>
        <%= link_to "Sam Smith", '/sam' %>
        <%= link_to "Andrew Faraday", '/andrew' %><br/>
        <% if current_user %>
          <div id='admin_menu'>
            <span>Admin Menu</span>
            <%= link_to 'MFiles Embeds', files_embeds_path %>
            <%= link_to "Junction Embeds", junction_embeds_path %>
   
            <%= link_to "Log out", '/logout'%>
          </div>
        <% end %>
      </div>
    </div>
    <% if flash[:notice] %>
      <div id=flash><%= flash[:notice] %></div>
    <% end %>
    <% unless @pagename == 'nil' %>
      <h1 id='subtitle'><%= @pagename%></h1>
    <% end %>
    <div id='sidebar'>
      <div class='sidebox'>
        <div id="fb-root"></div><script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:like-box href="https://www.facebook.com/pages/Marmite-Junction/194417103299" width="250" height='370' show_faces="true" border_color="" stream="false" header="true"></fb:like-box>
      </div>
      <div class='sidebox'>
<script src="http://widgets.twimg.com/j/2/widget.js"></script>
<script>
new TWTR.Widget({
  version: 2,
  type: 'search',
  search: 'MarmiteJunction',
  interval: 6000,
  title: 'What the Twittersphere',
  subject: 'Says about us...',
  width: 250,
  height: 200,
  theme: {
    shell: {
      background: '#8ec1da',
      color: '#ffffff'
    },
    tweets: {
      background: '#ffffff',
      color: '#444444',
      links: '#1985b5'
    }
  },
  features: {
    scrollbar: false,
    loop: true,
    live: true,
    hashtags: true,
    timestamp: true,
    avatars: true,
    toptweets: true,
    behavior: 'default'
  }
}).render().start();
</script>
      </div>
    </div>

    <div id="content">
      <%= yield %>
    </div> 
  </div> 
</body>
</html>
