<h4 style='margin-bottom:0px;'>Sign it?</h4>
<%= form_for @new_visitor, visitors_path do |f| %>

  <%= f.label :name %><br/>
  <%= f.text_field :name, :size => 28 %><br/>
  <%= f.label :email, "Email (will not be shared)" %><br/>
  <%= f.text_field :email, :size => 28 %><br/>
  <%= f.label :message %><br/>
  <%= f.text_area :message, :cols => 23, :rows => 5 %><br/>
  <%= f.submit "Sign" %>
<% end %>
